// You can get the values calculated by #eval by executing the following
// in the terminal:
//     foamDictionary setup
// No need to make backup of setup file before this command.


// Domain size and number of cells.
D 80.0;                                      // Turbine diameter (m). PLEASE DO NOT CHANGE THIS VALUE.
Lx 16;                                       // Non-dimensional (by D) streamwise domain length (-).
L 16;                                        // Non-dimensional (by D) cross-domain (y and z direction) length (-).
cD 4;                                        // Cells per diameter (-) in the background grid.
xMin         #eval "-$D*$Lx/2";              // Minimum x-extent of domain (m).
yMin         #eval "-$D*$L/2";               // Minimum y-extent of domain (m).
zMin         #eval "-$D*$L/2";               // Minimum z-extent of domain (m).
xMax         #eval "$D*$Lx/2";               // Maximum x-extent of domain (m).
yMax         #eval "$D*$L/2";                // Maximum y-extent of domain (m).
zMax         #eval "$D*$L/2";                // Maximum z-extent of domain (m).
nx           #eval "$Lx*$cD";                // Number of cells in x-direction.
ny           #eval "$L*$cD";                 // Number of cells in y-direction.
nz           #eval "$L*$cD";                 // Number of cells in z-direction.
dx           #eval "$D/$cD";                 // Grid size of background grid (m)

// Grid refinement box
refinelvls           2;                      // Number of refinement levels in box (0=no refinement, 1=2x, 2=4x, 3=8x, etc)
refinebox  #eval "pow(2, $refinelvls)";      // Ratio of outer cell size to inner cell size (should be 2^refinelvls)
dxref #eval "$dx/$refinebox";		             // Grid size in refined region (m)			



// Turbine settings
CT 0.75;                                     // Thrust coefficient of the turbine.
zh 0;                                        // Turbine hub height (m).
Dth #eval "2*$dxref";                        // Thickness of the AD (m).

// Initial conditions
Uh 8.0;    // Hub-height streamwise velocity (m/s)
flowVelocity         ($Uh 0 0);
pressure             0;

